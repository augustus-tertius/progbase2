{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "gnome-terminal",
	"isShellCommand": true,
	"args": [
		"--tab",
		"-e",
		"/bin/bash -c 'valgrind --leak-check=full --show-leak-kinds=all ./build/cpp; exec /bin/bash -i'"
	],
	"showOutput": "always"
}